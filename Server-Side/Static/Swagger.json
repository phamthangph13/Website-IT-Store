{
  "swagger": "2.0",
  "info": {
    "title": "DouneStore API",
    "description": "API documentation for DouneStore",
    "version": "1.0.0"
  },
  "host": "localhost:5000",
  "basePath": "/",
  "schemes": ["http"],
  "paths": {
    "/register": {
      "post": {
        "tags": ["Authentication"],
        "summary": "Register a new user",
        "description": "Register a new user and send OTP verification email",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "User registration details",
            "required": true,
            "schema": {
              "type": "object",
              "required": ["email", "password", "fullname"],
              "properties": {
                "email": {
                  "type": "string",
                  "example": "user@example.com"
                },
                "password": {
                  "type": "string",
                  "example": "password123"
                },
                "fullname": {
                  "type": "string",
                  "example": "John Doe"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful registration request",
            "schema": {
              "type": "object",
              "properties": {
                "success": {
                  "type": "boolean",
                  "example": true
                },
                "message": {
                  "type": "string",
                  "example": "OTP đã được gửi đến email của bạn"
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "schema": {
              "type": "object",
              "properties": {
                "success": {
                  "type": "boolean",
                  "example": false
                },
                "message": {
                  "type": "string",
                  "example": "Error message"
                }
              }
            }
          }
        }
      }
    },
    "/verify": {
      "post": {
        "tags": ["Authentication"],
        "summary": "Verify OTP and complete registration",
        "description": "Verify OTP sent to email and create new user account",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "OTP verification details",
            "required": true,
            "schema": {
              "type": "object",
              "required": ["email", "otp"],
              "properties": {
                "email": {
                  "type": "string",
                  "example": "user@example.com"
                },
                "otp": {
                  "type": "string",
                  "example": "123456"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful verification",
            "schema": {
              "type": "object",
              "properties": {
                "success": {
                  "type": "boolean",
                  "example": true
                },
                "message": {
                  "type": "string",
                  "example": "Đăng ký thành công"
                }
              }
            }
          },
          "400": {
            "description": "Invalid OTP or expired",
            "schema": {
              "type": "object",
              "properties": {
                "success": {
                  "type": "boolean",
                  "example": false
                },
                "message": {
                  "type": "string",
                  "example": "OTP không hợp lệ"
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "schema": {
              "type": "object",
              "properties": {
                "success": {
                  "type": "boolean",
                  "example": false
                },
                "message": {
                  "type": "string",
                  "example": "Error message"
                }
              }
            }
          }
        }
      }
    },
    "/login": {
      "post": {
        "tags": ["Authentication"],
        "summary": "Login user",
        "description": "Authenticate user with email and password",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Login credentials",
            "required": true,
            "schema": {
              "type": "object",
              "required": ["email", "password"],
              "properties": {
                "email": {
                  "type": "string",
                  "example": "user@example.com"
                },
                "password": {
                  "type": "string",
                  "example": "password123"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful login",
            "schema": {
              "type": "object",
              "properties": {
                "success": {
                  "type": "boolean",
                  "example": true
                },
                "message": {
                  "type": "string",
                  "example": "Đăng nhập thành công"
                },
                "user": {
                  "type": "object",
                  "properties": {
                    "fullname": {
                      "type": "string",
                      "example": "John Doe"
                    },
                    "email": {
                      "type": "string",
                      "example": "user@example.com"
                    },
                    "role": {
                      "type": "string",
                      "example": "Member"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid credentials",
            "schema": {
              "type": "object",
              "properties": {
                "success": {
                  "type": "boolean",
                  "example": false
                },
                "message": {
                  "type": "string",
                  "example": "Email không tồn tại hoặc mật khẩu không chính xác"
                }
              }
            }
          },
          "500": {
            "description": "Internal server error",
            "schema": {
              "type": "object",
              "properties": {
                "success": {
                  "type": "boolean",
                  "example": false
                },
                "message": {
                  "type": "string",
                  "example": "Error message"
                }
              }
            }
          }
        }
      }
    },
    "/forgot-password": {
      "post": {
        "tags": ["Authentication"],
        "summary": "Request password reset",
        "description": "Send password reset link to email",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "email": {
                  "type": "string",
                  "example": "user@example.com"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Reset email sent successfully",
            "schema": {
              "type": "object",
              "properties": {
                "success": {
                  "type": "boolean",
                  "example": true
                },
                "message": {
                  "type": "string",
                  "example": "Email khôi phục đã được gửi"
                }
              }
            }
          }
        }
      }
    },
    "/reset-password": {
      "post": {
        "tags": ["Authentication"],
        "summary": "Reset password",
        "description": "Reset password using token",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "token": {
                  "type": "string"
                },
                "password": {
                  "type": "string",
                  "example": "newpassword123"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Password reset successful",
            "schema": {
              "type": "object",
              "properties": {
                "success": {
                  "type": "boolean",
                  "example": true
                },
                "message": {
                  "type": "string",
                  "example": "Mật khẩu đã được cập nhật"
                }
              }
            }
          }
        }
      }
    },
    "/user/{account_link}": {
      "get": {
        "tags": ["User"],
        "summary": "Get user information",
        "parameters": [
          {
            "in": "path",
            "name": "account_link",
            "required": true,
            "type": "string",
            "description": "User's account link"
          }
        ],
        "responses": {
          "200": {
            "description": "User information retrieved successfully",
            "schema": {
              "type": "object",
              "properties": {
                "_id": { "type": "string" },
                "fullname": { "type": "string" },
                "email": { "type": "string" },
                "role": { "type": "string" },
                "account_link": { "type": "string" },
                "account_name": { "type": "string" },
                "avatar": { "type": "string" },
                "phone": { "type": "string" },
                "address": { "type": "string" },
                "createdAt": { "type": "string" },
                "stats": {
                  "type": "object",
                  "properties": {
                    "orders": { "type": "integer" },
                    "rating": { "type": "number" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/user/update/{account_link}": {
      "post": {
        "tags": ["User"],
        "summary": "Update user information",
        "parameters": [
          {
            "in": "path",
            "name": "account_link",
            "required": true,
            "type": "string"
          },
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "fullname": { "type": "string" },
                "phone": { "type": "string" },
                "address": { "type": "string" }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Update successful",
            "schema": {
              "type": "object",
              "properties": {
                "success": { "type": "boolean" },
                "message": { "type": "string" }
              }
            }
          }
        }
      }
    },
    "/user/update-avatar/{account_link}": {
      "post": {
        "tags": ["User"],
        "summary": "Update user avatar",
        "parameters": [
          {
            "in": "path",
            "name": "account_link",
            "required": true,
            "type": "string"
          },
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "avatar": { "type": "string" }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Avatar update successful"
          }
        }
      }
    },
    "/products": {
      "get": {
        "tags": ["Products"],
        "summary": "Get all products",
        "responses": {
          "200": {
            "description": "List of products",
            "schema": {
              "type": "object",
              "properties": {
                "success": { "type": "boolean" },
                "products": {
                  "type": "array",
                  "items": {
                    "type": "object"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/services": {
      "get": {
        "tags": ["Services"],
        "summary": "Get all services",
        "responses": {
          "200": {
            "description": "List of services",
            "schema": {
              "type": "object",
              "properties": {
                "success": { "type": "boolean" },
                "services": {
                  "type": "array",
                  "items": {
                    "type": "object"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/create_payment_link": {
      "post": {
        "tags": ["Payment"],
        "summary": "Create payment link",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "type": "object",
              "required": ["amount", "description"],
              "properties": {
                "amount": { "type": "number" },
                "description": { "type": "string" },
                "items": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "name": { "type": "string" },
                      "quantity": { "type": "integer" },
                      "price": { "type": "number" }
                    }
                  }
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Payment link created successfully"
          }
        }
      }
    },
    "/user/addresses/{account_link}": {
      "get": {
        "tags": ["User Addresses"],
        "summary": "Get user addresses",
        "parameters": [
          {
            "in": "path",
            "name": "account_link",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "List of user addresses"
          }
        }
      }
    },
    "/user/address/{account_link}": {
      "post": {
        "tags": ["User Addresses"],
        "summary": "Add new address",
        "parameters": [
          {
            "in": "path",
            "name": "account_link",
            "required": true,
            "type": "string"
          },
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "type": "object",
              "required": ["province", "district", "ward", "specific"],
              "properties": {
                "province": { "type": "string" },
                "district": { "type": "string" },
                "ward": { "type": "string" },
                "specific": { "type": "string" },
                "note": { "type": "string" },
                "label": { "type": "string" },
                "isDefault": { "type": "boolean" }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Address added successfully"
          }
        }
      }
    }
  },
  "definitions": {
    "User": {
      "type": "object",
      "properties": {
        "fullname": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "role": {
          "type": "string",
          "enum": ["Member"]
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        }
      }
    }
  }
}
